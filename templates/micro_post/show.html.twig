{% extends 'base.html.twig' %}

{% block title %} Post - {{ post.title }} {% endblock %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <div> {{ post.text }} </div>
    <div style="color: red;">
        {% if date(post.created) < date('-1year') %}
            Older than one year
        {% else %}
            {{ post.created|date('d/m/Y') }}
        {% endif %}
    </div>
{% endblock %}
